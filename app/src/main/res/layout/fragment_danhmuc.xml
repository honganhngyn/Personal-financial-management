<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tabs -->
    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tabChi"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tab_chi"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tabThu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tab_thu"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Fragment Chi -->
    <LinearLayout
        android:id="@+id/fragmentChi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- EditText + Clear button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etTenDanhMucChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btnClearChi"
                android:layout_toLeftOf="@+id/btnClearChi"
                android:background="@android:drawable/edit_text"
                android:hint="@string/hint_nhap_ten_danh_muc"
                android:padding="12dp"
                android:textColor="@color/textColor"
                android:backgroundTint="@color/frame"
                android:textColorHighlight="@color/textColor" />

            <ImageButton
                android:id="@+id/btnClearChi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listDanhMucChi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:dividerHeight="1dp"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnThemChi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="@string/button_them" />

            <Button
                android:id="@+id/btnSuaChi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="@string/button_sua" />

            <Button
                android:id="@+id/btnXoaChi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/button_xoa" />

        </LinearLayout>
    </LinearLayout>

    <!-- Fragment Thu -->
    <LinearLayout
        android:id="@+id/fragmentThu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- EditText + Clear button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etTenDanhMucThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btnClearThu"
                android:layout_toLeftOf="@+id/btnClearThu"
                android:background="@android:drawable/edit_text"
                android:hint="@string/hint_nhap_ten_danh_muc"
                android:backgroundTint="@color/frame"
                android:padding="12dp"
                android:textColor="@color/textColor"
                android:textColorHighlight="@color/textColor" />

            <ImageButton
                android:id="@+id/btnClearThu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listDanhMucThu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:dividerHeight="1dp"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnThemThu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/button_them" />

            <Button
                android:id="@+id/btnSuaThu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/button_sua" />

            <Button
                android:id="@+id/btnXoaThu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/button_xoa" />
        </LinearLayout>
    </LinearLayout>

    <!-- Nút Quay lại -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/purple_200"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/button_quay_lai" />
</LinearLayout>
