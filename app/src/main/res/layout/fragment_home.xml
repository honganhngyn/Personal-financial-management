<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:paddingTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tabs -->
    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tabChi"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/expense"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tabThu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/income"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Fragment Chi -->
    <ScrollView
        android:id="@+id/fragmentChi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Ngày -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/etDateChi"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:focusable="false"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/label_ngay"
                    android:textColor="@color/textColor" />

                <EditText
                    android:id="@+id/textNgaychi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_nhap_ngay"
                    android:inputType="date"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- Ghi chú -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/etNote"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:focusable="false"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/label_ghi_chu"
                    android:textColor="@color/textColor" />

                <EditText
                    android:id="@+id/textNoteChi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_nhap_ghi_chu"
                    android:inputType="text"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- Số tiền -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/etAmountChi"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:focusable="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:text="@string/tab_tien_chi"
                    android:textColor="@color/textColor" />

                <EditText
                    android:id="@+id/textTienChi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_so_tien_chi"
                    android:inputType="number"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- Danh mục -->
            <EditText
                android:id="@+id/etDanhMuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_bg"
                android:focusable="false"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/danh_muc"
                android:textColor="@color/textColor" />

            <GridLayout
                android:id="@+id/gridCategoriesChi"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="12dp"
                android:alignmentMode="alignMargins"
                android:columnCount="4"
                android:rowCount="3"
                android:layout_gravity="fill"
                android:useDefaultMargins="true" />

            <!-- Nút -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnThemTienChi"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00BFFF"
                    android:text="@string/hint_so_tien_chi"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnChinhSuaChi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple_200"
                    android:text="@string/edt_danhmuc"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fragment Thu -->
    <ScrollView
        android:id="@+id/fragmentThu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Ngày -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/etDateThu"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:focusable="false"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/label_ngay"
                    android:textColor="@color/textColor" />

                <EditText
                    android:id="@+id/textNgaythu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/label_ngay"
                    android:inputType="date"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- Ghi chú -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/etNoteThu"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:focusable="false"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/label_ghi_chu"
                    android:textColor="@color/textColor" />

                <EditText
                    android:id="@+id/textNoteThu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_nhap_ghi_chu"
                    android:inputType="text"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- Số tiền -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/etAmountThu"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:focusable="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:text="@string/tab_tien_thu"
                    android:textColor="@color/textColor" />

                <EditText
                    android:id="@+id/textTienThu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_so_tien_thu"
                    android:inputType="number"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- Danh mục -->
            <EditText
                android:id="@+id/etDanhMucThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_bg"
                android:focusable="false"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/danh_muc"
                android:textColor="@color/textColor" />

            <GridLayout
                android:id="@+id/gridCategoriesThu"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="12dp"
                android:alignmentMode="alignMargins"
                android:columnCount="4"
                android:rowCount="3"
                android:useDefaultMargins="true" />

            <!-- Nút -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnThemTienThu"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00BFFF"
                    android:text="@string/hint_so_tien_thu"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnChinhSuaThu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple_200"
                    android:text="@string/edt_danhmuc"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
