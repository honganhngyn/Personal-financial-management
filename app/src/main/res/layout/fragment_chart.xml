<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Nút chuyển tháng & tiêu đề tháng -->
    <LinearLayout
        android:id="@+id/monthNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnPrevMonth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:tint="@color/textColor"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/label_month"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnNextMonth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:tint="@color/textColor"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <!-- Layout tóm tắt thu/chi -->
    <LinearLayout
        android:id="@+id/layoutSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthNavigation"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/textThuChart"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_thu_nhap"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textChiChart"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_chi_tieu"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTongThuChi"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_tong_thu_chi"
            android:textColor="#0099CC"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Biểu đồ -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/layoutSummary"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Tabs -->
    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pieChart"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tabChi"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/tab_selected"
            android:gravity="center"
            android:text="@string/expense"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tabThu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/tab_unselected"
            android:gravity="center"
            android:text="@string/income"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs"
        android:layout_marginTop="8dp"
        android:padding="8dp" />
</RelativeLayout>
