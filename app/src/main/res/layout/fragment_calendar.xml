<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Nút chuyển tháng -->
    <LinearLayout
        android:id="@+id/monthNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnPrevMonth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:textColor="@color/textColor"
            app:tint="@color/textColor"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/label_month"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnNextMonth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:tint="@color/textColor"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <!-- Lưới lịch -->
    <GridView
        android:id="@+id/calendarGrid"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/monthNavigation"
        android:layout_margin="15dp"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:numColumns="7"
        android:stretchMode="columnWidth"
        android:textColor="@color/textColor"
        android:verticalSpacing="0dp" />


    <!-- Danh sách chi tiết ngày -->
    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarGrid"
        android:layout_marginTop="0dp"
        android:background="@color/nav_bar"
        android:padding="8dp"
        android:text="@string/label_ngay"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/summaryContainer"
        android:layout_below="@id/tvSelectedDate"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Tổng kết thu chi -->
    <LinearLayout
        android:id="@+id/summaryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvThu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/income"
            android:textColor="@color/colorThu"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvChi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/expense"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/total"
            android:textColor="#0099CC"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
